<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mobapptut.com.camera2videoimage.Camera2VideoImageActivity">

    <mobapptut.com.camera2videoimage.AutoFitTextureView
        android:layout_width="320dp"
        android:layout_height="240dp"
        android:id="@+id/textureView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/controllButtonArea1"
        android:layout_below="@id/textureView"
        >
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/videoOnlineImageButton"
        android:contentDescription="@string/video_button"
        android:src="@mipmap/btn_video_online"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="50dp"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cameraImageButton"
        android:contentDescription="@string/camera_button"
        android:src="@mipmap/btn_camera"
        android:layout_alignTop="@id/videoOnlineImageButton"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp" />

    <Chronometer
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chronometer"
        android:visibility="invisible"
        android:textColor="#ff0000"
        android:textSize="25dp"

        android:layout_alignStart="@+id/videoOnlineImageButton" />
    </RelativeLayout>
    <mobapptut.com.camera2videoimage.AutoFitTextureView
        android:layout_width="320dp"
        android:layout_height="240dp"
        android:id="@+id/textureView2"
        android:layout_below="@id/controllButtonArea1"
        android:layout_marginTop="5dp"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/controllButtonArea2"
        android:layout_below="@id/textureView2"
        >
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/videoOnlineImageButton2"
            android:contentDescription="@string/video_button"
            android:src="@mipmap/btn_video_online"
            android:layout_alignParentTop="true"
            android:layout_marginTop="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="50dp"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cameraImageButton2"
            android:contentDescription="@string/camera_button"
            android:src="@mipmap/btn_camera"
            android:layout_alignTop="@id/videoOnlineImageButton2"
            android:layout_alignParentStart="true"
            android:layout_marginStart="50dp" />

        <Chronometer
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chronometer2"
            android:visibility="invisible"
            android:textColor="#ff0000"
            android:textSize="25dp"

            android:layout_alignStart="@id/videoOnlineImageButton2" />
    </RelativeLayout>
</RelativeLayout>
